<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FixerBasicText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/lato_black</item>
    </style>

    <style name="FixerBasicText.H1" parent="FixerBasicText">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">@dimen/textSize36</item>
    </style>

    <style name="FixerBasicText.H2" parent="FixerBasicText">
        <item name="android:textSize">@dimen/textSize24</item>
    </style>

    <style name="FixerBasicText.H3" parent="FixerBasicText">
        <item name="android:textSize">@dimen/textSize16</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FixerBasicText.H3.DigiFont" parent="FixerBasicText.H3">
        <item name="android:textColor">@color/red</item>
        <item name="fontFamily">@font/digi_regular</item>
    </style>

    <style name="FixerBasicText.H4" parent="FixerBasicText">
        <item name="android:textSize">@dimen/textSize12</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Image">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
</resources>